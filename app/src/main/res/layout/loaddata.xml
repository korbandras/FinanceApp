<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/LoadedData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Saved data loaded:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/Percentage"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/addNew"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add new data"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/modifyByID"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Percentage" />

    <ListView
        android:id="@+id/Percentage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="123321"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/LoadedData"
        app:layout_constraintBottom_toTopOf="@id/addNew"/>

    <EditText
        android:id="@+id/editID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter ID you want to modify"
        android:inputType="numberDecimal"
        app:layout_constraintTop_toBottomOf="@id/LoadedData"
        app:layout_constraintBottom_toTopOf="@id/Percentage" />

    <Button
        android:id="@+id/modifyByID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Modify Data with given ID"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/addNew"
        app:layout_constraintTop_toBottomOf="@id/Percentage" />

</androidx.constraintlayout.widget.ConstraintLayout>